SHELL=/bin/bash

CXX=g++
CXXFLAGS=-std=c++11 -O3 -D __SUN_N__=2

BIN_DIR=bin/
BUILD_DIR=build/
SRC_DIR=src/
INCLUDE_DIR=include/

OBJ_NAMES=sublattice_algebra twolink_operators MultilevelAnalyzer
BIN_NAMES=multilevel

OBJS=${OBJ_NAMES:%=${BUILD_DIR}/%.o}
TARGETS=${BIN_NAMES:%=${BIN_DIR}/%}
LIBS=-l:ranlux.o -l:ranlxd.o -l:ranlxs.o

all: ${TARGETS}

${TARGETS}: ${BIN_DIR}/%: ${SRC_DIR}/%.cc ${OBJS}
	readarray deps < <(depfinder.sh . $< includes_SU2 libs_SU2);\
	${CXX} ${CXXFLAGS} -o $@ $^ -I"${INCLUDE_DIR}" "$${deps[@]}" ${LIBS}
	
${OBJS}: ${BUILD_DIR}/%.o: ${SRC_DIR}/%.cc  ${INCLUDE_DIR}/%.hh
	readarray deps < <(depfinder.sh . $< includes_SU2 libs_SU2);\
	${CXX} ${CXXFLAGS} -c -o $@ $< -I"${INCLUDE_DIR}" "$${deps[@]}"

clean:
	rm -f ${BIN_DIR}/* ${BUILD_DIR}/*
